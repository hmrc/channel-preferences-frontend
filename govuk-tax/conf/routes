# Routes
# This file defines all application routes (Higher priority routes first)

GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /paye/home                  @controllers.PayeController.home
GET     /benefits                   @controllers.PayeController.benefits

# routes for testing IDA integration
GET     /login                      @controllers.LoginController.login
GET     /samllogin                  @controllers.LoginController.samlLogin
GET     /test/jdensmore             @controllers.LoginController.enterAsJohnDensmore
GET     /test/gfisher               @controllers.LoginController.enterAsGeoffFisher
POST    /ida/login                  @controllers.LoginController.idaLogin

GET     /sa/home                    @controllers.SaController.home

GET     /                           @controllers.HomeController.landing

GET     /home                       @controllers.HomeController.home
