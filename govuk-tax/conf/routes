GET     /test/jdensmore                 @controllers.LoginController.enterAsJohnDensmore
GET     /test/gfisher                   @controllers.LoginController.enterAsGeoffFisher
POST    /ida/login                      @controllers.LoginController.idaLogin
GET     /business-tax/login             @controllers.LoginController.businessTaxLogin
POST    /government-gateway/login       @controllers.LoginController.governmentGatewayLogin
GET     /logout                         @controllers.LoginController.logout

GET     /business-tax/home              @controllers.BusinessTaxController.home

# Agents
GET     /agent/reason-for-application   @controllers.AgentController.reasonForApplication
GET     /agent/sro-check                @controllers.AgentController.sroCheck
