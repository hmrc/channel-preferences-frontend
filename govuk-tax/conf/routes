# Routes
# This file defines all application routes (Higher priority routes first)

GET     /assets/*file                   controllers.Assets.at(path="/public", file)

#
# PAYE
#
GET     /paye/home                      @controllers.PayeController.home
GET     /paye/benefits                  @controllers.PayeController.listBenefits

GET     /paye/benefits/:year/remove/:employmentSequenceNumber/1    @controllers.PayeController.removeCarBenefitToStep1(year: Int, employmentSequenceNumber: Int)
POST    /paye/benefits/:year/remove/:employmentSequenceNumber/2   @controllers.PayeController.removeCarBenefitToStep2(year: Int, employmentSequenceNumber: Int)
POST    /paye/benefits/:year/remove/:employmentSequenceNumber/3   @controllers.PayeController.removeCarBenefitToStep3(year: Int, employmentSequenceNumber: Int)
GET     /paye/benefits/:year/remove/:employmentSequenceNumber/3    @controllers.PayeController.benefitRemoved(year: Int, employmentSequenceNumber: Int)

# routes for testing IDA integration
