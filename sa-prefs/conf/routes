# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /sa/print-preferences/:token                            @controllers.SaPrefsController.index(token: String, return_url: String)
GET     /sa/print-preferences/:token/confirm                    @controllers.SaPrefsController.confirm(token: String, redirect_url: String)
POST    /sa/print-preferences/:token                            @controllers.SaPrefsController.submitPrefsForm(token: String, redirect_url: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
