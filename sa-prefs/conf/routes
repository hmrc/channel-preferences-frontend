# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /sa/print-preferences/:token                            @controllers.SaPrefsController.index(token: String, return_url: String)
GET     /sa/print-preferences-saved                             @controllers.SaPrefsController.confirm(return_url: String)
GET     /sa/print-preferences-no-action                         @controllers.SaPrefsController.noAction(return_url: String, digital: Boolean)
POST    /sa/print-preferences/:token                            @controllers.SaPrefsController.submitPrefsForm(token: String, return_url: String)
POST    /sa/print-preferences/keep-paper/:token                 @controllers.SaPrefsController.submitKeepPaperForm(token: String, return_url: String)

GET     /sa/print-preferences/verification/:token               @controllers.EmailValidation.verify(token: String)
GET     /sa/print-preferences/not-requested/:token              @controllers.EmailValidation.notRequested(token: String)


# Map static resources from the /public folder to the /assets URL path
GET     /sa/print-preferences/assets/*file                      controllers.Assets.at(path="/public", file)

GET     /sa/admin/healthcheck                                   @controllers.HealthCheckController.check
